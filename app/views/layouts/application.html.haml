      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

  %body
    %div.navbar.navbar-inverse.navbar-fixed-top{:role=>"navigation"}
      %div.container
        %div.navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href=> "#"}gCamp
        %div.navbar-collapse.collapse


    <!-- Main jumbotron for a primary marketing message or call to action -->
    %div.container.title
      %h1 gCamp
      %p Your Life, Organized

    %div.container
      <!-- Example row of columns -->
      %div.row
        %div.col-md-4
          /%img.pic{src:"https://farm4.staticflickr.com/3784/10788864133_9c2902226c_n.jpg"}

          %div.panel.panel-info
            %div.panel-heading
              %h3.panel-title Tasks
            %div.panel-body Grouped by projects and lists.  Just the way you like'em

        %div.col-md-4
          /%img.pic{src:"https://farm7.staticflickr.com/6101/6852546666_936aa6e5ed_n.jpg"}

          %div.panel.panel-info
            %div.panel-heading
              %h3.panel-title Documents

            %div.panel-body
              %ul
                %li Upload
                %li Comment
                %li Revise

        %div.col-md-4
          /%img.pic{src:"https://farm3.staticflickr.com/2241/2318978643_7752052a97_n.jpg"}
          %div.panel.panel-info
            %div.panel-heading
              %h3.panel-title Comments

            %div.panel-body
              %ul
                %li Comment on tasks and documents
                %li Get email notifications





