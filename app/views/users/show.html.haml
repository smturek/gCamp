.container

  - if @user == current_user || current_user.admin
    = link_to "Edit", edit_user_path(@user), :class => "btn btn-primary pull-right new-task"
  - else
    = link_to "Back", users_path, :class => "btn btn-primary pull-right new-task"

  %h1
    = @user.first_name
    = @user.last_name

  %dl.dl-horizontal
    %dt
      First Name
    %dd
      = @user.first_name
    %dt
      Last Name
    %dd
      = @user.last_name
    %dt
      Email
    %dd
      = mail_to(@user.email)
    - if @user == current_user || current_user.admin
      %dt Pivotal Tracker Token
      %dd
        = @user.tracker_token
