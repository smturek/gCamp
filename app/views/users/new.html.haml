.container

  .page-header
    %h1
      New User
  = form_for @user, :html => {:class => 'form-horizontal'} do |e|

    .form-group
      = e.label :first_name, :class => "col-md-1 control-label"
      .col-md-4
        = e.text_field :first_name, :class => "form-control"

    .form-group
      = e.label :last_name, :class => "col-md-1 control-label"
      .col-md-4
        = e.text_field :last_name, :class => "form-control"

    .form-group
      = e.label :email, :class => "col-md-1 control-label"
      .col-md-4
        = e.email_field :email, :class => "form-control"

    = e.submit 'Create Task', :class => "btn btn-primary col-md-offset-1"
