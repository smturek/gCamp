.container

  .page-header
    %h1
      Edit User

  = form_for @user, :html => {:class => 'form-horizontal'} do |e|
    .form-group
      = e.label :first_name, "First Name", :class => "col-md-1 control-label edituser"
      .col-md-4
        = e.text_field :first_name, :class => "form-control"

    .form-group
      = e.label :last_name, "Last Name", :class => "col-md-1 control-label edituser"
      .col-md-4
        = e.text_field :last_name, :class => "form-control"

    .form-group
      = e.label :email, :class => "col-md-1 control-label edituser"
      .col-md-4
        = e.email_field :email, :class => "form-control"

    = e.submit 'Update User', :class => "btn btn-primary col-md-offset-1"

  .well.col-md-4.col-md-offset-1
    = link_to 'Delete User', @user, :class => "btn btn-danger btn-block", :method => :delete, :data => { :confirm => 'Are you sure?' }
