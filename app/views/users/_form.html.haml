.container

  .page-header
    %h1
      = title

  = render "shared/errors", source: @user

  = form_for @user, :html => {:class => 'form-horizontal'} do |e|
    .form-group
      = e.label :first_name, "First Name", :class => "col-md-2 control-label"
      .col-md-4
        = e.text_field :first_name, :class => "form-control"

    .form-group
      = e.label :last_name, "Last Name", :class => "col-md-2 control-label"
      .col-md-4
        = e.text_field :last_name, :class => "form-control"

    .form-group
      = e.label :email, :class => "col-md-2 control-label"
      .col-md-4
        = e.email_field :email, :class => "form-control"

    .form-group
      = e.label :password, :class => "col-md-2 control-label"
      .col-md-4
        = e.password_field :password, :class => "form-control"

    .form-group
      = e.label :password_confirmation, :class => "col-md-2 control-label"
      .col-md-4
        = e.password_field :password_confirmation, :class => "form-control"

    = e.submit "#{button}", :class => "btn btn-primary col-md-offset-2 userform"

    - if delete
      = link_to "Delete User", user_path, method: :delete,
        :data => {:confirm => "Are you sure?"}
