.container

  .page-header
    %h1
      = title

  = render "shared/errors", source: @user

  = form_for @user, :html => {:class => 'form-horizontal'} do |f|
    .form-group
      = f.label :first_name, "First Name", :class => "col-md-2 control-label"
      .col-md-4
        = f.text_field :first_name, :class => "form-control"

    .form-group
      = f.label :last_name, "Last Name", :class => "col-md-2 control-label"
      .col-md-4
        = f.text_field :last_name, :class => "form-control"

    .form-group
      = f.label :email, :class => "col-md-2 control-label"
      .col-md-4
        = f.email_field :email, :class => "form-control"

    .form-group
      = f.label :password, :class => "col-md-2 control-label"
      .col-md-4
        = f.password_field :password, :class => "form-control"

    .form-group
      = f.label :password_confirmation, :class => "col-md-2 control-label"
      .col-md-4
        = f.password_field :password_confirmation, :class => "form-control"

    .form-group
      = f.label :tracker_token, "Pivotal Tracker Token", :class => 'col-md-2 control-label'
      .col-md-4
        = f.text_field :tracker_token, :class => "form-control"

    - if current_user.admin
      .form-group
        .col-md-12.col-md-offset-2
          .checkbox
            %label
              = f.check_box :admin
              Admin

    = f.submit "#{button}", :class => "btn btn-primary col-md-offset-2 userform"

    .row.gutter

    - if delete
      .well.form-well.col-md-4.col-md-offset-2
        = link_to "Delete User", user_path, :class => "btn btn-danger center-block",
         method: :delete, :data => {:confirm => "Are you sure?"}
