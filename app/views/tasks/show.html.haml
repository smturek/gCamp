%div.container
  %div.test

    %p#notice= notice

    %p
      %b Description:
      = @task.description

    %div.input-group
      - form_for @task do |f|
        = f.label :complete
        = f.check_box :complete

    = link_to 'Edit', edit_task_path(@task), :class => "btn btn-primary"
    = link_to 'Back', tasks_path, :class => "btn btn-primary"
