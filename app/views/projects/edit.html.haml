.container

  .page-header
    %h1 Edit Project

  = form_for @project, :html => {:class => 'form-horizontal'} do |f|

    .form-group
      = f.label :name, :class => "col-md-1 control-label editform"
      .col-md-4
        = f.text_field :name, :class => "form-control"

    = f.submit 'Update Project', :class => "btn btn-primary col-md-offset-1"
